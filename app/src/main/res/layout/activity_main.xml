<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background"
    tools:context="com.first_app.fleet.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:background="@color/colorPrimary"
            android:padding="30dp">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_icon"
                android:textSize="16sp"
                android:textColor="@color/whiteText"
                android:textStyle="italic|bold"
                android:fontFamily="casual"
                android:textAlignment="center" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/add_record"
            android:layout_below="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:text="@string/add_record"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/all_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_record"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:text="@string/all_record"
            android:textColor="@color/colorAccent"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/all_record"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:text="@string/delete_all"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/list_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:text="@string/contacts"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</ScrollView>
