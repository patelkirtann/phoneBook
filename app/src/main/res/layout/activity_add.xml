<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kt_ki.dbpractice.AddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/name_field"
            android:layout_alignRight="@+id/name_field"
            android:layout_below="@+id/name_field"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phone_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email_field"
            android:layout_alignStart="@+id/email_field"
            android:layout_below="@+id/email_field"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="@string/phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/street_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/phone_field"
            android:layout_alignStart="@+id/phone_field"
            android:layout_below="@+id/phone_field"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="@string/street"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/city_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/street_field"
            android:layout_alignStart="@+id/street_field"
            android:layout_below="@+id/street_field"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="@string/city"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/tv_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/city_field"
            android:layout_alignLeft="@+id/city_field"
            android:layout_alignRight="@+id/city_field"
            android:layout_alignStart="@+id/city_field"
            android:layout_below="@+id/city_field"
            android:gravity="left"
            android:hint="@string/info_max_300"
            android:lines="3"
            android:maxLength="300"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_auto"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_auto"
            android:layout_below="@+id/tv_auto"
            android:background="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="@string/cancel"
            android:textColor="@color/cardview_dark_background" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_auto"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_auto"
            android:layout_below="@+id/tv_auto"
            android:background="@color/colorPrimaryDark"
            android:text="@string/save"
            android:textSize="14sp"
            android:textColor="@color/cardview_dark_background" />
    </RelativeLayout>

</ScrollView>
