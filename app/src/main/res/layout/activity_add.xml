<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.first_app.fleet.AddActivity">

    <LinearLayout
        android:id="@+id/ll_new_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:text="@string/create_new"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:orientation="horizontal"
        android:layout_below="@id/ll_new_contact"
        android:background="@color/cardview_light_background"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_line">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp">

            <EditText
                android:id="@+id/name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:drawableLeft="@drawable/ic_person"/>

            <EditText
                android:id="@+id/email_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/name_field"
                android:layout_alignRight="@+id/name_field"
                android:layout_below="@+id/name_field"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:drawableLeft="@drawable/ic_email"/>

            <EditText
                android:id="@+id/phone_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/email_field"
                android:layout_alignStart="@+id/email_field"
                android:layout_below="@+id/email_field"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/phone"
                android:inputType="phone"
                android:padding="8dp"
                android:drawableLeft="@drawable/ic_phone"/>

            <EditText
                android:id="@+id/street_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/phone_field"
                android:layout_alignStart="@+id/phone_field"
                android:layout_below="@+id/phone_field"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/street"
                android:inputType="textPostalAddress"
                android:padding="8dp"
                android:drawableLeft="@drawable/ic_add_location"/>

            <EditText
                android:id="@+id/city_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/street_field"
                android:layout_alignStart="@+id/street_field"
                android:layout_below="@+id/street_field"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/city"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:drawableLeft="@drawable/ic_location_city"/>

            <EditText
                android:id="@+id/tv_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/city_field"
                android:layout_alignLeft="@+id/city_field"
                android:layout_alignRight="@+id/city_field"
                android:layout_alignStart="@+id/city_field"
                android:layout_below="@+id/city_field"
                android:layout_marginTop="8dp"
                android:background="@drawable/tv_back_border"
                android:hint="@string/info_max_300"
                android:inputType="textMultiLine"
                android:lines="2"
                android:scrollY="@dimen/activity_vertical_margin"
                android:maxLength="300"
                android:scrollbars="vertical"
                android:drawableLeft="@drawable/ic_info"/>

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_auto"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/save"
                android:textSize="14sp" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
