<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/tv_id"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bt_gotoCall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_name"
            android:background="@drawable/ic_phone"
            android:padding="10dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_gotoCall"
            android:layout_alignBottom="@+id/bt_gotoCall"
            android:layout_toEndOf="@+id/bt_gotoEmail"
            android:layout_toRightOf="@+id/bt_gotoEmail"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            android:textColor="@color/colorAccent" />
        <QuickContactBadge
            android:id="@+id/cb_SavePhone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_name"
            android:layout_alignEnd="@+id/tv_phoneNumber"
            android:layout_alignRight="@+id/tv_phoneNumber"
            android:background="@drawable/ic_phone"/>

        <Button
            android:id="@+id/bt_gotoEmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bt_gotoCall"
            android:background="@drawable/ic_email"
            android:clickable="true"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_gotoEmail"
            android:layout_alignBottom="@+id/bt_gotoCall"
            android:layout_toEndOf="@+id/bt_gotoMap"
            android:layout_toRightOf="@+id/bt_gotoMap"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            android:textColor="@color/colorAccent" />
        <QuickContactBadge
            android:id="@+id/cb_saveEmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/cb_SavePhone"
            android:layout_alignEnd="@+id/tv_emailAddress"
            android:layout_alignRight="@+id/tv_emailAddress"
            android:background="@drawable/ic_email"/>

        <Button
            android:id="@+id/bt_gotoMap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bt_gotoEmail"
            android:background="@drawable/ic_location"
            android:padding="10dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_gotoMap"
            android:layout_toEndOf="@+id/bt_gotoEmail"
            android:layout_toRightOf="@+id/bt_gotoEmail"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_gotoMap"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_dark_background"
            android:padding="20dp"
            android:isScrollContainer="true"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</ScrollView>